<Page x:Class="DesktopApplication.Pages.QRCode"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DesktopApplication.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="QRCode">
    <Border Grid.Column="1" Style="{StaticResource whiteBorder}">
        <Grid>
            <TextBlock Text="Rate our work please! Thanks!" FontSize="25" FontWeight="SemiBold" Margin="204,10,204,344" TextAlignment="Center"/>
            <Image Margin="214,75,214,107" x:Name="imgQR"/>
            <Button Content="Contact us!" Width="150" Click="GenerateQRCodeButton_Click" Margin="0,356,10,19" Style="{StaticResource addButton}"/>
        </Grid>
    </Border>
</Page>
